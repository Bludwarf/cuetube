{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "moduleResolution": "bundler",
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types",
      "./src/@types/CueParser.d.ts",
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "useDefineForClassFields": false
  }
}
